{
  "name": "Ubuntu 22.04 Jammy Dev Container",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "/bin/bash"
  },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-python.python"
      ]
    }
  },
  "features": {},
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential git",
  "onCreateCommand": "echo 'Development environment ready!'",
  "containerResources": {
    "cpus": "4",
    "memory": "16gb"
  },
  "mounts": [
    "source=devcontainer,destination=/workspace,type=volume,volume-driver=local,volume-opt=o=size=32G"
  ]
}
